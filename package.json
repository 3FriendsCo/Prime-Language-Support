{
  "name": "prime-language-support",
  "displayName": "Prime Language Support",
  "description": "This is the extension to add support for the Prime programming language",
  "version": "0.0.3",
  "publisher": "PontusHenriksson",
  "repository": {
    "type": "git",
    "url": "https://github.com/3FriendsCo/Prime-Language-Support"
  },
  "icon": "./media/extension-icon.png",
  "keywords": [
    "prime",
    "prime extension",
    "primeLang",
    "PLS",
    "Programming language",
    "Prime language",
    "prime compiler"
  ],
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "contributes": {
    "languages": [
      {
        "id": "prime",
        "aliases": [
          "Prime",
          "prime",
          "primeLang",
          "PLS"
        ],
        "icon": {
          "light": "./media/extension-icon.png",
          "dark": "./media/extension-icon.png"
        },
        "extensions": [
          ".pri",
          ".prime"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "prime",
        "scopeName": "source.pri",
        "path": "./syntaxes/prime.tmLanguage.json"
      }
    ]
  }
}
